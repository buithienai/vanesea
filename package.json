{
  "name": "es-frontend-kit",
  "title": "Gulp Frontend Boilerplate",
  "version": "1.6.2",
  "description": "An ES6 boilerplate with common frontend tasks using Gulp 4 as build system.",
  "author": "Damien Seguin <https://twitter.com/dmnsgn>",
  "homepage": "https://github.com/dmnsgn/gulp-frontend-boilerplate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmnsgn/gulp-frontend-boilerplate.git"
  },
  "issues": {
    "url": "https://github.com/dmnsgn/gulp-frontend-boilerplate/issues"
  },
  "keywords": [
    "gulp",
    "gulp4",
    "es6",
    "es2015",
    "boilerplate",
    "frontend",
    "tasks",
    "workflow",
    "preprocessor",
    "framework"
  ],
  "license": "MIT",
  "vendorCss": [
    "./bower_components/bootstrap/dist/css/bootstrap.min.css",
    "./bower_components/font-awesome/css/font-awesome.min.css",
    "./bower_components/toastr/toastr.css"
  ],
  "vendors": [
    "./bower_components/jquery/dist/jquery.min.js",
    "./bower_components/bootstrap/dist/js/bootstrap.min.js",
    "./bower_components/toastr/toastr.min.js"
  ],
  "fonts": [
    "./bower_components/bootstrap/fonts/*.*",
    "./bower_components/font-awesome/fonts/*.*",
    "./bower_components/roboto-fontface/fonts/Roboto-Condensed/*.*"
  ],
  "napa": {},
  "devDependencies": {
    "font-awesome-icons": "^1.4.2",
    "gulp-sass": "^3.1.0",
    "gulp-sass-glob": "^1.0.8",
    "normalize.css": "^5.0.0",
    "aliasify": "^2.1.0",
    "autoprefixer": "^6.3.x",
    "babel-core": "^6.7.x",
    "babel-preset-es2015": "^6.6.x",
    "brfs": "^1.4.3",
    "browser-sync": "^2.12.x",
    "browserify": "^13.0.x",
    "chalk": "^1.1.x",
    "css-mqpacker": "^5.0.x",
    "csswring": "^5.0.x",
    "del": "^2.2.x",
    "eslint": "^3.6.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.x",
    "eslint-plugin-react": "^6.3.x",
    "favicons": "^4.7.x",
    "fontmin": "^0.9.x",
    "gulp": "^3.9.1",
    "gulp-cache": "^0.4.x",
    "gulp-changed": "^1.3.x",
    "gulp-filter": "^4.0.x",
    "gulp-header": "^1.7.x",
    "gulp-imagemin": "^3.0.x",
    "gulp-install": "^1.1.0",
    "gulp-mocha": "^3.0.x",
    "gulp-newer": "^1.1.x",
    "gulp-notify": "^2.2.x",
    "gulp-postcss": "^6.1.x",
    "gulp-preprocess": "^2.0.x",
    "gulp-rename": "^1.2.x",
    "gulp-sitemap": "^4.0.x",
    "gulp-sourcemaps": "^1.6.x",
    "gulp-uglify": "^2.0.x",
    "gulp-util": "^3.0.x",
    "gulp-w3cjs": "^1.2.x",
    "gulp-watch": "^4.3.x",
    "gulp.spritesmith": "^6.2.x",
    "imagemin-pngquant": "^5.0.x",
    "minimist": "^1.2.x",
    "napa": "^2.3.x",
    "postcss": "^5.2.4",
    "pretty-hrtime": "^1.0.x",
    "psi": "^2.0.x",
    "stylelint": "^7.3.1",
    "stylelint-config-suitcss": "^8.0.0",
    "uglify-js": "^2.6.x",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.7.x"
  },
  "scripts": {
    "install": "napa",
    "init": "npm i inquirer@1.0.3 chalk cli-spinner del babel-cli babel-preset-es2015 && babel-node ./boilerplate/init/index.js",
    "dev": "NODE_ENV=development gulp --env dev",
    "prod": "NODE_ENV=production gulp --env prod"
  },
  "directories": {
    "test": "test"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "react"
    ],
    "globals": {
      "ga": true
    },
    "rules": {
      "comma-dangle": 0
    }
  },
  "config": {
    "verbose": false,
    "port": 3000,
    "src": "./src",
    "dist": "./dist",
    "browsers": [
      "last 2 version",
      "safari 5",
      "ie 9",
      "opera 12.1",
      "ios 6",
      "android 4"
    ],
    "prodURL": "http://domain.tld",
    "shareImageURL": "http://domain.tld/static/share.png",
    "twitterImage": "https://domain.tld/static/twitter.png",
    "twitterHandle": "@domain",
    "themeColor": "#eeeeee",
    "analyticsUA": "UA-XXXXX-X",
    "developerURL": ""
  },
  "extensions": {
    "scripts": "js",
    "styles": "scss"
  },
  "browserify": {
    "transform": [
      "aliasify",
      "brfs"
    ]
  },
  "aliasify": {
    "aliases": {
      "root": "./src/scripts",
      "views": "./src/scripts/views"
    }
  },
  "bugs": {
    "url": "https://github.com/dmnsgn/gulp-frontend-boilerplate/issues"
  },
  "main": "gulpfile.babel.js"
}
